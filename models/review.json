// レビューDB フィールド案
// Amazonのレビューみたいなイメージ
{
	"id": { // ユニークなID
		"type": "ObjectID",
		"required": true
	},
	"subject" : { // 科目のID
		"type": "ObjectID",
		"required": true
	},
	"star": { // 0~5 までのこの科目のオススメ度
		"type": "number",
		"required": true
	},
	"teacher": { // 担当名
		"type": "string",
		"required": true
	},
	"sentence": { // 俗に言うレビュー文
		"type": "string",
		"required": false
	},
	"title": {  // 
		"type": "string",
		"required": true
	},
	"result": { // そんな偉そうなレビュー書いてるけど君秀とったの？ 0 -> 不可, 1 -> 可, .. 4 -> 秀 という風な感じかな
		"type": "number",
		"required": false
	},
	"reviewer": { // ちなみに君誰を格納するユーザのID
		"type": "ObjectID",
		"required": true
	}
}